<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/song_image_history"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/song_name_history"
            android:textSize="22sp"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/song_image_history"
            android:layout_alignParentStart="true"
            android:layout_marginStart="93dp"
            android:padding="8dp"
            android:text="Song"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/album_name_history"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="227dp"
            android:layout_height="38dp"
            android:layout_alignBottom="@+id/song_image_history"
            android:layout_alignParentStart="true"
            android:layout_marginStart="93dp"
            android:layout_marginBottom="0dp"
            android:padding="8dp"
            android:text="Album Name"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/time_history"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:textColor="@color/text_color"
            android:text="Time" />

    </RelativeLayout>
</android.support.v7.widget.CardView>